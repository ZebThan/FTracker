<%= form_for @match, :html => { :class => "form-horizontal match" } do |f| %>

    <% if @match.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @match.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="control-group">
    <%= f.label :player_red_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :player_red_id, Player.all.map {|a| [a, a.id]}, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:player_red_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :player_blue_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :player_blue_id, Player.all.map {|a| [a, a.id]}, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:player_blue_id]) %>
  </div>
  <div class="control-group">
    <%= f.label :player_red_score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :player_red_score, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:player_red_score]) %>
  </div>
  <div class="control-group">
    <%= f.label :player_blue_score, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :player_blue_score, :class => 'form-control' %>
    </div>
    <%= error_span(@match[:player_blue_score]) %>
  </div>


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            matches_path, :class => 'btn btn-default' %>

<% end %>
